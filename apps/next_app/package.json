{
  "name": "next_app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run 'federation:dev' & npm run 'next:dev'",
    "build": "npm run 'federation:build' && npm run 'next:build'",
    "next:dev": "next dev -p 3004",
    "next:build": "next build",
    "start": "next start -p 3004",
